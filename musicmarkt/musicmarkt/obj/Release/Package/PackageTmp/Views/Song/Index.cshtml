@using EntitiLayer.Concreate
@model List<Song>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = " ";}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Şarkılar</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Şarkı İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>                      
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Şarkı Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            if(item.Category.CategoryName=="Rock")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName=="blues")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Category.CategoryName == "jazz")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "reagy")
                            {
                                color = "badge badge-secondary";
                            }
                            

                        <tr>
                            <td>
                                @item.SongID
                            </td>
                            <td>
                                <a>
                                    @item.SongName
                                </a>
                                <br />
                                <small>
                                  @(((DateTime)item.SongDate).ToString("dd-MMM-yyyy"))
                                </small>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="@item.Artist.ArtistImage">
                                    </li>
                                </ul>
                            </td>
                            <td>
                                @item.SongStatus
                            </td>
                            <td class="project-state">
                                <span class="@color">@item.Category.CategoryName</span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="/Content/ContentBySong/@item.SongID">
                                    <i class="fas fa-folder">
                                    </i>
                                    İçerik
                                </a>
                                <a class="btn btn-info btn-sm" href="/Song/EditSong/@item.SongID">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Song/DeleteSong/@item.SongID">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/Song/AddSong/" class="btn btn-primary">Yeni Şarkı Girişi</a>
