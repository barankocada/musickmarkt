@model EntitiLayer.Concreate.Song

@{
    ViewBag.Title = "EditSong";
    Layout = "~/Views/Shared/_ArtistLayout.cshtml";
}

<h2>Şarkı güncelleme sayfası</h2>
@using (Html.BeginForm("EditSong", "ArtistPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.SongID)
        @Html.HiddenFor(x => x.ArtistID)
        @Html.HiddenFor(x => x.SongDate)
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.SongName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Güncelle</button>
    </div>
}



